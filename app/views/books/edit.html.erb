
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h1>Editing Book</h1>
  
  <% if @book.errors.any? %>
 <%= @book.errors.count %>件のerrorが発生しました
 <% @book.errors.full_messages.each do |message| %>
 <%= message %>
 <% end %>
 <% end %>

  
  <%= form_with model:@book, local:true do |f| %>
   <div class="form-group">
    <div class="book_title">Title</div>
      <%= f.text_field :title %>
      </div>


  <div class="form-group">
       <div class=" ook_opinion">Opinion</div>
         <%= f.text_area :body %><br>
           </div>

  <div class="form-group">
      <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
       </div>
   <% end %>
   <%= link_to "Show",book_path(@book) %> |
  <%= link_to "Back",books_path %>

</div>
</div>
</div>

