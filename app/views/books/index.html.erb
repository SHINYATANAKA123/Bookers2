<% @books.each do |book| %>
<div>

  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>



<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opiion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>